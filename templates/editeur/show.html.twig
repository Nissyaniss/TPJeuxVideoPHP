{% extends 'base.html.twig' %}

{% block title %}Editeur
{% endblock %}

{% block body %}
	<div class="container">
		<div class="d-flex justify-content-between align-items-center mb-4" style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 2rem;">
			<h1>ğŸ¢ Editeur Details</h1>
			<a href="{{ path('app_editeur_index') }}" class="btn btn-show">â† Retour Ã  la liste</a>
		</div>

		<div class="card" style="padding: 2rem;">
			<table class="table">
				<tbody>
					<tr>
						<th style="width: 200px;">Id</th>
						<td>{{ editeur.id }}</td>
					</tr>
					<tr>
						<th>Nom</th>
						<td>{{ editeur.nom }}</td>
					</tr>
					<tr>
						<th>Pays</th>
						<td>{{ editeur.pays }}</td>
					</tr>
					<tr>
						<th>Site Web</th>
						<td>
							{% if editeur.siteWeb %}
								<a href="{{ editeur.siteWeb }}" target="_blank">{{ editeur.siteWeb }}</a>
							{% else %}
								-
							{% endif %}
						</td>
					</tr>
					<tr>
						<th>Description</th>
						<td>{{ editeur.description }}</td>
					</tr>
					<tr>
						<th>Created At</th>
						<td>{{ editeur.createdAt ? editeur.createdAt|date('d/m/Y H:i') : '' }}</td>
					</tr>
					<tr>
						<th>Updated At</th>
						<td>{{ editeur.updatedAt ? editeur.updatedAt|date('d/m/Y H:i') : '' }}</td>
					</tr>
				</tbody>
			</table>

			<div style="margin-top: 2rem; display: flex; gap: 1rem;">
				<a href="{{ path('app_editeur_edit', {'id': editeur.id}) }}" class="btn btn-primary">Modifier</a>
				{{ include('editeur/_delete_form.html.twig') }}
			</div>
		</div>
	</div>
{% endblock %}
