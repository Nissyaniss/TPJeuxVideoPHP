{% extends 'base.html.twig' %}

{% block title %}Genre
{% endblock %}

{% block body %}
	<div class="container">
		<div class="d-flex justify-content-between align-items-center mb-4" style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 2rem;">
			<h1>üè∑Ô∏è Genre Details</h1>
			<a href="{{ path('app_genre_index') }}" class="btn btn-show">‚Üê Retour √† la liste</a>
		</div>

		<div class="card" style="padding: 2rem;">
			<table class="table">
				<tbody>
					<tr>
						<th style="width: 200px;">Id</th>
						<td>{{ genre.id }}</td>
					</tr>
					<tr>
						<th>Nom</th>
						<td>{{ genre.nom }}</td>
					</tr>
					<tr>
						<th>Description</th>
						<td>{{ genre.description }}</td>
					</tr>
					<tr>
						<th>Actif</th>
						<td>
							{% if genre.actif %}
								<span class="badge" style="background:#d1fae5; color:#065f46; padding:4px 8px; border-radius:4px; font-size:0.75rem; font-weight:600;">Active</span>
							{% else %}
								<span class="badge" style="background:#fee2e2; color:#991b1b; padding:4px 8px; border-radius:4px; font-size:0.75rem; font-weight:600;">Inactive</span>
							{% endif %}
						</td>
					</tr>
					<tr>
						<th>Created At</th>
						<td>{{ genre.createdAt ? genre.createdAt|date('d/m/Y H:i') : '' }}</td>
					</tr>
					<tr>
						<th>Updated At</th>
						<td>{{ genre.updatedAt ? genre.updatedAt|date('d/m/Y H:i') : '' }}</td>
					</tr>
				</tbody>
			</table>

			<div style="margin-top: 2rem; display: flex; gap: 1rem;">
				<a href="{{ path('app_genre_edit', {'id': genre.id}) }}" class="btn btn-primary">Modifier</a>
				{{ include('genre/_delete_form.html.twig') }}
			</div>
		</div>
	</div>
{% endblock %}
